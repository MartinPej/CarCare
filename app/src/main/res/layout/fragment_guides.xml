<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal"
        android:spacing="24dp">

        <!-- Tyre Guide Card -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/widget_background"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tyre Change Guide"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:id="@+id/tyreGuideThumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/tyre_thumbnail"
                        android:contentDescription="Tyre Thumbnail" />

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/play_arrow_1"
                        android:tint="#FFFFFF" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Changing Tyre Walkthrough Video"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/downloadTyrePdfButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Download PDF" />

                    <Button
                        android:id="@+id/viewTyrePdfButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="View PDF" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <!-- Oil Guide Card -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/widget_background"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oil Change Guide"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:id="@+id/oilGuideThumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/oil_thumbnail"
                        android:contentDescription="Oil Thumbnail" />

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/play_arrow_1"
                        android:tint="#FFFFFF" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oil Change Walkthrough Video"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/downloadOilPdfButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Download PDF" />

                    <Button
                        android:id="@+id/viewOilPdfButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="View PDF" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>
</ScrollView>
