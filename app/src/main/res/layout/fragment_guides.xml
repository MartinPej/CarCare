<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.guides.GuidesFragment">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="91dp"
        android:layout_height="87dp"
        android:layout_marginStart="8dp"
        android:text="Tyre Change Guide"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="91dp"
        android:layout_height="87dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="360dp"
        android:text="Oil Change Guide"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="129dp"
        android:layout_height="58dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="152dp"
        android:text="Download PDF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="129dp"
        android:layout_height="58dp"
        android:layout_marginEnd="152dp"
        android:text="Download PDF"
        app:layout_constraintBottom_toTopOf="@+id/oilGuideThumbnail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tyreGuideThumbnail"
        app:layout_constraintVertical_bias="0.476" />

    <Button
        android:id="@+id/button3"
        android:layout_width="129dp"
        android:layout_height="58dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:text="View PDF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="129dp"
        android:layout_height="58dp"
        android:layout_marginEnd="12dp"
        android:text="View PDF"
        app:layout_constraintBottom_toTopOf="@+id/oilGuideThumbnail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tyreGuideThumbnail"
        app:layout_constraintVertical_bias="0.476" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Changing Tyre Walkthrough Video"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Oil Change Walkthrough Video"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <ImageView
        android:id="@+id/tyreGuideThumbnail"
        android:layout_width="370dp"
        android:layout_height="207dp"
        android:layout_margin="16dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/tyre_thumbnail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:src="@drawable/play_arrow_1"
        android:tint="#FFF6F6"
        app:layout_constraintBottom_toBottomOf="@+id/tyreGuideThumbnail"
        app:layout_constraintEnd_toEndOf="@+id/tyreGuideThumbnail"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@+id/tyreGuideThumbnail"
        app:layout_constraintTop_toTopOf="@+id/tyreGuideThumbnail"
        app:layout_constraintVertical_bias="0.442" />

    <ImageView
        android:id="@+id/oilGuideThumbnail"
        android:layout_width="370dp"
        android:layout_height="207dp"
        android:layout_marginBottom="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/oil_thumbnail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:src="@drawable/play_arrow_1"
        android:tint="#FDFCFC"
        app:layout_constraintBottom_toBottomOf="@+id/oilGuideThumbnail"
        app:layout_constraintEnd_toEndOf="@+id/oilGuideThumbnail"
        app:layout_constraintStart_toStartOf="@+id/oilGuideThumbnail"
        app:layout_constraintTop_toTopOf="@+id/oilGuideThumbnail" />


</androidx.constraintlayout.widget.ConstraintLayout>